-- init
local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/GreenDeno/Venyx-UI-Library/main/source.lua"))()
local BluentonCraft = library.new("EternalDarkness Hub | Elephant Hotel", 7849724868)

-- themes
local themes = {
Background = Color3.fromRGB(24, 24, 24),
Glow = Color3.fromRGB(0, 0, 0),
Accent = Color3.fromRGB(10, 10, 10),
LightContrast = Color3.fromRGB(20, 20, 20),
DarkContrast = Color3.fromRGB(14, 14, 14),  
TextColor = Color3.fromRGB(255, 255, 255)
}

-- first page
local page = BluentonCraft:addPage("Money", 5012544693)
local section1 = page:addSection("Add Money")
local section3 = page:addSection("Remove Money")
local section2 = page:addSection("Settings")
local WaitingTime = false
local Amount = nil
local Player = nil
local Amount2 = nil
local Player2 = nil
local on = nil


section1:addSlider("Amount", 0, 0, 100000000000, function(value)
    Amount = value
end)

section1:addTextbox('Player (or type "all" for all players)', "", function(value)
    Player = value
end)

section1:addButton("Submit", function()
    if Player == "all" then
        for _,v in pairs(game.Players:GetChildren()) do
			game.ReplicatedStorage.MoneyRequest:FireServer(false, math.abs(Amount)*1, "Cash", v)
		end
    else
        game.ReplicatedStorage.MoneyRequest:FireServer(false, math.abs(Amount)*1, "Cash", game.Players[Player])
    end
end)

section3:addSlider("Amount", 0, 0, 100000000000, function(value)
    Amount2 = value
end)

section3:addTextbox('Player (or type "all" for all players)', "", function(value)
    Player2 = value
end)

section3:addButton("Submit", function()
    if Player2 == "all" then
        for _,v in pairs(game.Players:GetChildren()) do
			game.ReplicatedStorage.MoneyRequest:FireServer(false, math.abs(Amount2)*-1, "Cash", v)
		end
    else
        game.ReplicatedStorage.MoneyRequest:FireServer(false, math.abs(Amount2)*-1, "Cash", game.Players[Player2])
    end
end)

section2:addToggle("AFK", nil, function(value)
    on = value
end)

if focusLost then
BluentonCraft:Notify("BluentonCraft", value)
end

-- second page
local theme = BluentonCraft:addPage("Theme", 5012544693)
local colors = theme:addSection("Colors")
local settings = theme:addSection("Settings")

for theme, color in pairs(themes) do -- all in one theme changer, i know, im cool
colors:addColorPicker(theme, color, function(color3)
BluentonCraft:setTheme(theme, color3)
end)
end

settings:addKeybind("Toggle Keybind", Enum.KeyCode.BackSlash, function()
BluentonCraft:toggle()
end, function()
end)

while wait(0.1) do
    if on == true then
        local vu = game:GetService("VirtualUser")
        game:GetService("Players").LocalPlayer.Idled:connect(function()
            vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
            wait(1)
            vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
        end)
    end
end

-- load
BluentonCraft:SelectPage(venyx.pages[1], true)