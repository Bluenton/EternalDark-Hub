-- init
local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/GreenDeno/Venyx-UI-Library/main/source.lua"))()
local BluentonCraft = library.new("EternalDarkness Hub | Universal", 7849724868)

-- themes
local themes = {
Background = Color3.fromRGB(24, 24, 24),
Glow = Color3.fromRGB(0, 0, 0),
Accent = Color3.fromRGB(10, 10, 10),
LightContrast = Color3.fromRGB(20, 20, 20),
DarkContrast = Color3.fromRGB(14, 14, 14),  
TextColor = Color3.fromRGB(255, 255, 255)
}

-- first page
local page = BluentonCraft:addPage("Local Player", 5012544693)
local section1 = page:addSection("Movement")

section1:addSlider("Speed", 16, 16, 100, function(value)
    local Player = game:service'Players'.LocalPlayer;
    Player.Character.Humanoid.WalkSpeed = value;
end)

section1:addSlider("Jump Power", 50, 50, 100, function(value)
    local Player = game:service'Players'.LocalPlayer;
    Player.Character.Humanoid.JumpPower = value;
end)

-- second page
local theme = BluentonCraft:addPage("Theme", 5012544693)
local colors = theme:addSection("Colors")
local settings = theme:addSection("Settings")

for theme, color in pairs(themes) do -- all in one theme changer, i know, im cool
colors:addColorPicker(theme, color, function(color3)
BluentonCraft:setTheme(theme, color3)
end)
end

settings:addKeybind("Toggle Keybind", Enum.KeyCode.BackSlash, function()
BluentonCraft:toggle()
end, function()
end)

for _,v in pairs(game:GetService"Players".LocalPlayer.Character:GetChildren()) do
    if v:IsA"Script" then
        if v:FindFirstChild"LocalScript" then
            v:FindFirstChild"LocalScript".Disabled = true
        end
    end
end

BluentonCraft:SelectPage(venyx.pages[1], true)