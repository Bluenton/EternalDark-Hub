-- init
local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/Bluenton/Bluenton-UI-Library/main/source.lua"))()
local venyx = library.new("EternalDarkness Hub", 5013109572)

-- themes
local themes = {
Background = Color3.fromRGB(24, 24, 24),
Glow = Color3.fromRGB(0, 0, 0),
Accent = Color3.fromRGB(10, 10, 10),
LightContrast = Color3.fromRGB(20, 20, 20),
DarkContrast = Color3.fromRGB(14, 14, 14),  
TextColor = Color3.fromRGB(255, 255, 255)
}

-- first page
local page = venyx:addPage("Main", 5012544693)
local section1 = page:addSection("Log In")
local section3 = page:addSection("Information")
local key = nill
local msg = ""
local msgtype = ""

section1:addTextbox("Key", "", function(value)
    key = value
end)

section1:addButton("Submit", function()
    if key == game:HttpGet("https://raw.githubusercontent.com/EternalDarkness-Hub/EternalDarkness-Hub.github.io/main/KeySystem/Key.txt") then
        saveSettings()
        venyx:Notify("Key System", "Correct Key!")
        venyx:toggle()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Bluenton/EternalDark-Hub/main/GameChecker", true))();
    else
        venyx:Notify("Key System", "Wrong Key!")
    end
end)

section1:addButton("Get Key", function()
    venyx:Notify("Copied", "The link was copied\nhttps://eternaldarkness-hub.github.io/KeySystem/index.html")
    setclipboard("https://eternaldarkness-hub.github.io/KeySystem/index.html")
	toclipboard("https://eternaldarkness-hub.github.io/KeySystem/index.html")
end)

section3:addLabel("Eternal Darkness hub combines all best scripts on the\n web. The main goal of the script is to make hacking\n easier, so you wouldn't need to spend your time searching\nfor the script. Scripts are not made by me, they are made \nby other people so big thx to them.", 5)
venyx:Notify("EntertalDarkness", "Run Anti-AFK?", function(value)
    print(value)
    if value == true then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/2dgeneralspam1/scripts-and-stuff/master/scripts/LoadstringypVvhJBq4QNz", true))()
    end
end)

local filename = "EternalDarkness_Hub_settings.txt"

function loadSettings()
    print(" -- Trying Auto Log In! -- ")
    local HttpService = game:GetService("HttpService")
    if (readfile and isfile and isfile(filename)) then
        key = HttpService:JSONDecode(readfile(filename))
        if key == game:HttpGet("https://raw.githubusercontent.com/EternalDarkness-Hub/EternalDarkness-Hub.github.io/main/KeySystem/Key.txt") then
            print(" -- loging in -- ")
            venyx:toggle()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/Bluenton/EternalDark-Hub/main/GameChecker", true))();
        else
            print(" -- Key was wrong! -- ")
        end
    end
end

function saveSettings()
    print(" -- Saving key! -- ")
    local json
    local HttpService = game:GetService("HttpService")
    if (writefile) then
        json = HttpService:JSONEncode(key)
        writefile(filename, json)
    else
        print(" -- Error saving key! -- ")
    end
end

loadSettings()

-- load
venyx:SelectPage(venyx.pages[1], true)

local bb=game:service'VirtualUser'
game:service'Players'.LocalPlayer.Idled:connect(function()
    bb:CaptureController()
    bb:ClickButton2(Vector2.new())
    print("Roblox tried to kick u")
end)